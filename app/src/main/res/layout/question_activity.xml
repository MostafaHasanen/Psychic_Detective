<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question_activity"
    android:gravity="center"
    android:background="@drawable/f3"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/men"
        android:layout_width="339dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/std_blue_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989"
        app:menu="@menu/menu" />

    <RadioGroup
        android:id="@+id/RadioGroup2"
        android:layout_width="360dp"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.6"
        >

        <RadioButton
            android:id="@+id/Strong_agree2"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginHorizontal="5dp"

            android:elevation="4dp"
            android:gravity="center"
            android:padding="5dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/radio_selector_agree"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/Somewhat_agree2"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:background="@drawable/radio_selector_agree"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/ALittle_agree2"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_margin="3dp"

            android:background="@drawable/radio_selector_agree"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/Neither_nor2"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_margin="3dp"
            android:background="@drawable/selector_nither"
            android:button="@drawable/null_radio_button"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/ALittle_disagree2"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_margin="3dp"

            android:background="@drawable/radio_selector_dis"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/Somewhat_disagree2"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:background="@drawable/radio_selector_dis"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/Strong_disagree2"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginHorizontal="5dp"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="5dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/radio_selector_dis"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree" />
    </RadioGroup>


    <TextView
        android:id="@+id/Q2"
        android:layout_width="330dp"
        android:layout_height="115dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="#566A7E"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436" />

    <TextView
        android:id="@+id/Q1"
        android:layout_width="330dp"
        android:layout_height="115dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="#566A7E"
        android:textSize="20dp"
        android:fontFamily="serif"

        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <RadioGroup
        android:id="@+id/RadioGroup1"
        android:layout_width="360dp"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintVertical_bias="0.257">
        <RadioButton
            android:id="@+id/Strong_agree1"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginHorizontal="5dp"

            android:elevation="4dp"
            android:gravity="center"
            android:padding="5dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/radio_selector_agree"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:buttonTint="@color/teal_200"/>

        android:textSize="20sp" />

        <RadioButton
            android:id="@+id/Somewhat_agree1"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:background="@drawable/radio_selector_agree"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/ALittle_agree1"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:background="@drawable/radio_selector_agree"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/Neither_nor1"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_margin="3dp"
            android:background="@drawable/selector_nither"
            android:button="@drawable/null_radio_button"
            android:gravity="center"  />

        <RadioButton
            android:id="@+id/ALittle_disagree1"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:background="@drawable/radio_selector_dis"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/Somewhat_disagree1"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:background="@drawable/radio_selector_dis"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/Strong_disagree1"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginHorizontal="5dp"

            android:elevation="4dp"
            android:gravity="center"
            android:padding="5dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/radio_selector_dis"
            android:button="@drawable/null_radio_button"
            android:textColor="@drawable/radio_selector_agree" />
    </RadioGroup>

    <Button
        android:id="@+id/Nextbtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/btnlogin"
        android:text="Next"
        android:textColor="@color/gray"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <Button
        android:id="@+id/Backbtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/btnlogin"
        android:text="Back"
        android:textColor="@color/gray"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

</androidx.constraintlayout.widget.ConstraintLayout>